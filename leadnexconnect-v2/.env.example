# Database
DATABASE_URL=postgresql://user:password@localhost:5432/leadnexconnect
# For production: postgresql://user:password@your-host:5432/leadnexconnect

# API Configuration
PORT=4000
NODE_ENV=development
API_BASE_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# JWT & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production

# Lead Generation APIs
APOLLO_API_KEY=your_apollo_api_key
PEOPLEDATALABS_API_KEY=your_pdl_api_key
HUNTER_API_KEY=your_hunter_api_key
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# Email Configuration (Choose one)
# Option 1: Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# Option 2: SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@booknex.com
# SENDGRID_FROM_NAME=BookNex Solutions

# Option 3: Replit Mail (when deployed on Replit)
# REPLIT_MAIL_FROM=your-repl-name@replmail.com

# Redis (Optional - for job queue)
# REDIS_URL=redis://localhost:6379
# For production Redis: redis://user:password@your-host:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Cron Jobs
ENABLE_CRON_JOBS=false
DAILY_CAMPAIGN_TIME=09:00
FOLLOW_UP_CHECK_TIME=10:00

# LinkedIn
LINKEDIN_SALES_NAV_ENABLED=true

# Feature Flags
ENABLE_WEB_SCRAPING=true
ENABLE_EMAIL_TRACKING=true
ENABLE_AUTO_ENRICHMENT=true
